# ============================================================================
# Society of Mind - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values

# ----------------------------------------------------------------------------
# Required Configuration
# ----------------------------------------------------------------------------

# OpenAI API Key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_key_here

# Node Environment
NODE_ENV=development  # development | production

# Server Port
PORT=4000

# ----------------------------------------------------------------------------
# Authentication (Production Required)
# ----------------------------------------------------------------------------

# API Keys for gateway authentication (comma-separated)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Leave empty in development to disable auth
API_KEYS=key1,key2,key3

# ----------------------------------------------------------------------------
# Optional: Database Connection
# ----------------------------------------------------------------------------

# PostgreSQL connection (for real plan data)
DATABASE_URL=postgresql://user:pass@localhost:5432/asknewton

# ----------------------------------------------------------------------------
# Optional: Redis Cache
# ----------------------------------------------------------------------------

# Redis URL (for caching and distributed rate limiting)
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# Optional: Covered California API
# ----------------------------------------------------------------------------

# Covered California API key (for real plan data)
COVERED_CA_API_KEY=your_covered_ca_key_here

# ----------------------------------------------------------------------------
# Optional: Rate Limiting
# ----------------------------------------------------------------------------

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window (default: 60)
RATE_LIMIT_MAX_REQUESTS=60

# ----------------------------------------------------------------------------
# Optional: Monitoring & Alerts
# ----------------------------------------------------------------------------

# Slack webhook URL for alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Log level: debug | info | warn | error
# LOG_LEVEL=info
